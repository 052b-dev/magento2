<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="SetAllowedCurrencies">
        <arguments>
            <argument name="allowedCurrencies" type="string" defaultValue="['US Dollar']"/>
        </arguments>
        <amOnPage url="{{AdminConfigCurrencySetupPage.url}}" stepKey="navigateToConfigCurrencySetupPage"/>
        <conditionalClick selector="{{CurrencySetupSection.currencyOptions}}" dependentSelector="{{CurrencySetupSection.allowCurrencies}}" visible="false" stepKey="openOptions"/>
        <waitForPageLoad stepKey="waitForOptions"/>
        <selectOption selector="{{CurrencySetupSection.allowCurrencies}}" parameterArray="{{allowedCurrencies}}" stepKey="selectCurrencies"/>
        <click selector="{{AdminMainActionsSection.save}}" stepKey="saveConfigs"/>
        <see userInput="You saved the configuration." stepKey="seeSuccessMessage"/>
    </actionGroup>
</actionGroups>
