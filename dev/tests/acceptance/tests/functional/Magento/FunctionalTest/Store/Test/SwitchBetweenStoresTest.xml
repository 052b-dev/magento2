<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Test/etc/testSchema.xsd">
    <test name="SwitchBetweenStoresTest">
        <annotations>
            <features value="Switching between stores on frontend"/>
            <stories value="Switch between stores on frontend"/>
            <title value="Switch between stores on frontend"/>
            <description value="Switch between stores on frontend and check that customer session is shared between stores, there are no 404 errors and correct category names are displayed"/>
            <group value="store"/>
        </annotations>
        <before>
            <!-- createData new root category -->
            <createData entity="NewRootCategory" stepKey="createNewRootCategory" />
            <!-- createData new store with new root cat -->
            <createData entity="customStoreGroup" stepKey="storeGroup">
                <requiredEntity createDataKey="createNewRootCategory"/>
            </createData>
            <!-- Create new store view and assign it to non default store -->
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin1"/>
            <actionGroup ref="CreateCustomStoreViewActionGroup" stepKey="createCustomStoreView">
                <argument name="storeGroupName" value="$$storeGroup.group[name]$$"/>
            </actionGroup>
        </before>

        <amOnPage stepKey="amOnStorefrontPage"  url="/"/>
    </test>
</tests>
